@page "/Computers/Details/{ComputerId}/"
@inject ToemsApiService apiService
@layout DetailsLayout 
<ComputerActions Id="@ComputerId" />


<EditForm Model="computer" OnInvalidSubmit="editComputerAsync">
    <RadzenCard>
        <RadzenTextBox Placeholder="Name" @bind-Value="computer.Name" Style="margin:10px;" />
    </RadzenCard>
</EditForm>

@code {
    [Parameter]
    public string ComputerId { get; set; }

    EntityComputer computer = new EntityComputer();

    protected async override Task OnInitializedAsync()
    {
        computer = await apiService.ComputerService.Get(ComputerId);
    }


    async Task editComputerAsync()
    {

    }
}
